{% extends "base_timecard.html" %}
{% set user = USERS.get_current_user() %}
{% block nav %}
.collapse.navbar-collapse.navbar-ex1-collapse
  %ul.nav.navbar-nav
    %li
      %a
        %span.text-muted Projects
    {% if user %}
    %li
      %a
        %span.text-muted Me
    {% endif %}
  %ul.nav.navbar-nav.navbar-right
    {% if user %}
    %li
      %a(href="{{ URI_FOR('settings') }}") Account settings
    %li
      %a(href="{{ USERS.create_logout_url() }}") Logout
    {% else %}
    %li
      %a(href="{{ USERS.create_login_url() }}") Login
    {% endif %}
{% endblock nav %}
{% block content %}{% endblock content %}
